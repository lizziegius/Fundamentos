#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main() {
        float Area,pi,radio;
                pi=3.1416;
        cout<<"Ingresar el radio: ";
        cin>>radio;
        Area=pi*(pow(radio,2));
        cout<<"El Area del circulo es: "<<Area<<endl;
        getch();
}
