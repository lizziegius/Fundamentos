// Menumatriz.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

#define MAX 20

using namespace std;

void mostrarmatriz(int MAT[MAX][MAX],int m, int n);
void cargarmatriz(int MAT[MAX] [MAX],int m, int n);
float promedio(int MAT[MAX] [MAX],int m, int n);
int mayor(int MAT[MAX][MAX],int m, int n);

void main(){
	int matriz[MAX][MAX],fil,col,may,opc;
	float prom;
	do{
		cout<<"Ingrese el numero de filas:";
		cin>>fil;
	}while((fil<=0)||(fil>MAX));
	do{
		cout<<"Ingrese el numero de columnas:";
		cin>>col;
	}while((col<=0)||(col>MAX));
	do{
		cout<<"\t Menu\n";
		cout<<"\t ====\n\n";
		cout<<"1.Cargar matriz\n";
		cout<<"2.Mostrar matriz\n";
		cout<<"3.Promedio\n";
		cout<<"4.Mayor\n";
		cout<<"0.Salir\n";
		cout<<"Opcion:";
		cin>>opc;
		switch(opc){
		case 1:cargarmatriz(matriz,fil,col);
			break;
		case 2:mostrarmatriz(matriz,fil,col);
			break;
		case 3: cout<<"El promedio es: "<<promedio(matriz,fil,col);
			break;
		case 4: cout<<"El mayor es: "<<mayor(matriz,fil,col);
			break;
		case 0: cout<<"salir";
			break;
		default: cout<<"Error";
			break;
		}
		getch();
		system("cls");
	}while(opc!=0);
}

void cargarmatriz(int MAT[MAX][MAX],int m, int n){
	for(int i=0; i<m; i++){
		for(int j=0; j<n; j++){
			cout<<"Matriz ["<<i<<"]["<<j<<"]=";
		    cin>>MAT[i][j];
		}
	}
}

void mostrarmatriz(int MAT[MAX][MAX],int m, int n){
	for(int i=0;i<m;i++){
		for(int j=0;j<n;j++)
			cout<<"Matriz ["<<i<<"]["<<j<<"]="<<MAT[i][j]<<endl;
	}
}

float promedio(int MAT[MAX][MAX],int m, int n){
	int s;
	float prom;
	s=0;
	for(int i=0;i<m;i++){
		for(int j=0;j<n;j++){
			s=s+MAT[i][j];
		}
	}
	prom=(s/(m*n));
	return prom;
}

int mayor(int MAT[MAX][MAX],int m, int n){
	int may;
	may=MAT[0][0];
	for(int i=0;i<m;i++){
		for(int j=0;j<n;j++){
			if(may<MAT[i][j]){
				may=MAT[i][j];
			}
		}
	}
	return may;
}

