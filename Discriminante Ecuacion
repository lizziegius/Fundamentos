// DiscriminanteEcuacion.cpp : Defines the entry point for the console
application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main() {
        float x,b,a,c;
        cout<<"Ingresar b: ";
        cin>>b;
        cout<<"Ingresar a: ";
        cin>>a;
        cout<<"Ingresar c: ";
        cin>>c;
        x=(pow(b,2))-4*a*c;
        cout<<"El discriminante de la ecuacion es: "<<x<<endl;
        getch();
}
